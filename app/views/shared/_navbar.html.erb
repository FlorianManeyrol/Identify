<div class="navbar-identify">
  <div class="container">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-identify-brand" do %>
    <%= image_tag "logo_medium.svg" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-identify-right hidden-xs hidden-sm">
    <%= link_to t(".concept", default: "Concept"), "#", class: "navbar-identify-item navbar-identify-link" %>

    <%= link_to t(".price", default: "Tarif"), "#", class: "navbar-identify-item navbar-identify-link" %>

    <%= link_to t(".blog", default: "Blog"), "#", class: "navbar-identify-item navbar-identify-link" %>

    <%= link_to t(".contact", default: "Contact"), "#contact-form", class: "navbar-identify-item navbar-identify-link" %>


    <!-- Different navigation if login or not -->
    <span role="separator" class="divider"></span>
    <% if user_signed_in? %>

      <!-- Notification -->
      <%= link_to "#", class: "navbar-identify-item navbar-identify-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div>
      <% end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-identify-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-identify-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-identify-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "AccÃ¨s client"), new_user_session_path, class: "navbar-identify-item navbar-identify-link-cta" %>

    <% end %>




    <!-- Button (call-to-action) -->
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-identify-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-identify-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
  </div>
</div>

